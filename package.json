{
  "name": "ordinals-trade-ledger",
  "version": "1.0.0",
  "description": "Public ledger UI for agent-to-agent ordinals trades. Cloudflare Workers + D1.",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create ordinals-trade-ledger",
    "db:migrate": "wrangler d1 execute ordinals-trade-ledger --file=src/schema.sql",
    "db:migrate:001": "wrangler d1 execute ordinals-trade-ledger --local --file=src/migration-001.sql",
    "db:migrate:001:remote": "wrangler d1 execute ordinals-trade-ledger --remote --file=src/migration-001.sql"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241205.0",
    "wrangler": "^4.65.0"
  },
  "dependencies": {
    "@noble/hashes": "^1.8.0",
    "@noble/secp256k1": "^2.3.0"
  }
}
